<Window x:Class="RSMFValidationDesktop.Dialogs.OpenFileDialogSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSMFValidationDesktop"
        mc:Ignorable="d"
        Title="Relativity Short Message File Validator" Height="450" Width="800">
    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Name="btnOpenFile" Click="btnOpenFile_Click" Width="780" Height="39" FontWeight="Bold" FontSize="20">Select RSMF Sample to Validate</Button>
        </WrapPanel>
        <TextBox Name="txtEditor" TextWrapping="WrapWithOverflow"/>
    </DockPanel>
</Window>
